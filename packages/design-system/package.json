{
  "name": "@flux/design-system",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./src/styles/design-system.css"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "bun run build-storybook && bunx http-server storybook-static --port 6006 --silent & bunx wait-on tcp:127.0.0.1:6006 && bun run test:run",
    "validate:8pt": "node scripts/validate-8pt-grid.js",
    "lint": "eslint src",
    "precommit": "bun run validate:8pt && bun run lint && bun run test:run"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.2",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/preact": "^8.0.0",
    "@storybook/preact-vite": "^8.0.0",
    "@storybook/test": "^8.6.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "glob": "^13.0.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "preact": "^10.24.3",
    "storybook": "^8.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  }
}
